generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model User {
  id             String    @id @default(cuid())
  name           String?
  email          String?   @unique
  emailVerified  DateTime?
  image          String?
  accounts       Account[]
  sessions       Session[]
  pointLogs      PointLog[]
  revertedLogs   PointLog[] @relation("RevertedBy")
  presetTasks    PresetTask[]
  pushSubscriptions PushSubscription[]
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@unique([identifier, token])
}

model PointLog {
  id              String          @id @default(cuid())
  userId          String
  user            User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  kind            String          @default("PRESET")
  duration        String?
  points          Int
  description     String
  presetKey       String?
  presetId        String?
  preset          PresetTask?     @relation(fields: [presetId], references: [id], onDelete: SetNull)
  durationMinutes Int?
  rewardCost      Int?
  revertedAt      DateTime?
  revertedById    String?
  revertedBy      User?           @relation("RevertedBy", fields: [revertedById], references: [id])
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt

  @@index([userId])
  @@index([kind])
  @@index([revertedAt])
  @@index([createdAt])
  @@index([userId, revertedAt])
  @@index([presetId])
}

model PushSubscription {
  id        String   @id @default(cuid())
  userId    String
  endpoint  String   @unique
  p256dh    String
  auth      String
  userAgent String?
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
}

model PresetTask {
  id          String    @id @default(cuid())
  createdById String
  createdBy   User      @relation(fields: [createdById], references: [id], onDelete: Cascade)
  label       String
  bucket      String
  isShared    Boolean   @default(false)
  logs        PointLog[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([createdById])
  @@index([isShared])
  @@index([bucket])
}
