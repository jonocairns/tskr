generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

enum HouseholdRole {
  DICTATOR
  APPROVER
  DOER
}

enum ApprovalOverride {
  REQUIRE
  SKIP
}

enum LogStatus {
  PENDING
  APPROVED
  REJECTED
}

enum InviteStatus {
  PENDING
  ACCEPTED
  DECLINED
  REVOKED
  EXPIRED
}

model User {
  id                String    @id @default(cuid())
  name              String?
  email             String?   @unique
  emailVerified     DateTime?
  image             String?
  lastHouseholdId   String?
  lastHousehold     Household? @relation("UserLastHousehold", fields: [lastHouseholdId], references: [id])
  householdsCreated Household[] @relation("HouseholdCreator")
  invitesSent       HouseholdInvite[] @relation("HouseholdInviteInvitedBy")
  memberships       HouseholdMember[]
  accounts          Account[]
  sessions          Session[]
  pointLogs         PointLog[]
  revertedLogs      PointLog[] @relation("RevertedBy")
  approvedLogs      PointLog[] @relation("ApprovedBy")
  rejectedLogs      PointLog[] @relation("RejectedBy")
  presetTasks       PresetTask[]
  pushSubscriptions PushSubscription[]
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
}

model Household {
  id                String            @id @default(cuid())
  name              String
  createdById       String
  createdBy         User              @relation("HouseholdCreator", fields: [createdById], references: [id], onDelete: Cascade)
  members           HouseholdMember[]
  lastHouseholdUsers User[]            @relation("UserLastHousehold")
  invites           HouseholdInvite[]
  presetTasks       PresetTask[]
  pointLogs         PointLog[]
  createdAt         DateTime          @default(now())
  updatedAt         DateTime          @updatedAt

  @@index([createdById])
}

model HouseholdMember {
  id                       String        @id @default(cuid())
  householdId              String
  userId                   String
  role                     HouseholdRole @default(DOER)
  requiresApprovalDefault  Boolean       @default(false)
  joinedAt                 DateTime      @default(now())
  household                Household     @relation(fields: [householdId], references: [id], onDelete: Cascade)
  user                     User          @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([householdId, userId])
  @@index([householdId])
  @@index([userId])
}

model HouseholdInvite {
  id          String       @id @default(cuid())
  householdId String
  household   Household    @relation(fields: [householdId], references: [id], onDelete: Cascade)
  code        String       @unique
  role        HouseholdRole @default(DOER)
  status      InviteStatus @default(PENDING)
  invitedById String
  invitedBy   User         @relation("HouseholdInviteInvitedBy", fields: [invitedById], references: [id], onDelete: Cascade)
  invitedAt   DateTime     @default(now())
  expiresAt   DateTime
  respondedAt DateTime?
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  @@index([householdId])
  @@index([status])
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@unique([identifier, token])
}

model PointLog {
  id              String          @id @default(cuid())
  householdId     String
  household       Household       @relation(fields: [householdId], references: [id], onDelete: Cascade)
  userId          String
  user            User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  kind            String          @default("PRESET")
  duration        String?
  points          Int
  description     String
  presetKey       String?
  presetId        String?
  preset          PresetTask?     @relation(fields: [presetId], references: [id], onDelete: SetNull)
  durationMinutes Int?
  rewardCost      Int?
  status          LogStatus       @default(APPROVED)
  approvedById    String?
  approvedBy      User?           @relation("ApprovedBy", fields: [approvedById], references: [id])
  approvedAt      DateTime?
  rejectedById    String?
  rejectedBy      User?           @relation("RejectedBy", fields: [rejectedById], references: [id])
  rejectedAt      DateTime?
  revertedAt      DateTime?
  revertedById    String?
  revertedBy      User?           @relation("RevertedBy", fields: [revertedById], references: [id])
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt

  @@index([householdId])
  @@index([householdId, status])
  @@index([userId])
  @@index([kind])
  @@index([revertedAt])
  @@index([createdAt])
  @@index([userId, revertedAt])
  @@index([presetId])
}

model PushSubscription {
  id        String   @id @default(cuid())
  userId    String
  endpoint  String   @unique
  p256dh    String
  auth      String
  userAgent String?
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
}

model PresetTask {
  id          String    @id @default(cuid())
  householdId String
  household   Household @relation(fields: [householdId], references: [id], onDelete: Cascade)
  createdById String
  createdBy   User      @relation(fields: [createdById], references: [id], onDelete: Cascade)
  label       String
  bucket      String
  isShared    Boolean   @default(false)
  approvalOverride ApprovalOverride?
  logs        PointLog[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([householdId])
  @@index([createdById])
  @@index([isShared])
  @@index([bucket])
}
